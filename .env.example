# Server Configuration
PORT=7000
NODE_ENV=development

# Cloudflare Worker URLs (REQUIRED for stream functionality)
# Deploy the scrapers from cloudflare-workers/ to your Cloudflare account
WORKER_HENTAIMAMA=https://your-hentaimama-worker.workers.dev
WORKER_HENTAISEA=https://your-hentaisea-worker.workers.dev
WORKER_HENTAITV=https://your-hentaitv-worker.workers.dev

# Cache Configuration (LRU in-memory only)
CACHE_TTL_CATALOG=3600      # 1 hour
CACHE_TTL_META=7200          # 2 hours
CACHE_TTL_STREAM=300         # 5 minutes
CACHE_TTL_SEARCH=900         # 15 minutes
CACHE_MAX_ITEMS=500          # Maximum items in LRU cache

# Scraper Configuration
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36
REQUEST_TIMEOUT=10000        # 10 seconds
MAX_RETRIES=3

# Addon Configuration
ADDON_NAME=HentaiStream
ADDON_ID=com.hentaistream.addon
ADDON_VERSION=0.1.0
ADDON_DESCRIPTION=Adult anime streaming addon. 18+ only.

# Logging
LOG_LEVEL=info              # error, warn, info, debug

# Rate Limiting (optional, for Phase 3)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000  # 1 minute
